{
  "name": "kpm",
  "description": "Monorepo for KTH Personal Menu",
  "private": true,
  "scripts": {
    "init": "npm run init:clean && npm i && npm run init:workspaces",
    "init:clean": "npm exec --workspaces -c 'rm -rf package-lock.json'",
    "init:workspaces": "npm exec --workspaces -c 'npm i --package-lock-only'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KTH/kpm.git"
  },
  "author": "KTH Royal Institute of Technology",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/KTH/kpm/issues"
  },
  "homepage": "https://github.com/KTH/kpm#readme",
  "workspaces": [
    "packages/*"
  ]
}
