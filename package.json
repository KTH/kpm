{
  "name": "kpm",
  "description": "Monorepo for KTH Personal Menu",
  "private": true,
  "scripts": {
    "dev": "npm-run-all -l --parallel dev:*",
    "postinstall": "ts-node --esm node_modules/.bin/evolene-local-packages && prettier -w **/evolene-local-packages.json",
    "test": "npm test --workspaces --if-present",
    "/* ----------- */": "",
    "dev:my-canvas-rooms-api": "PORT=3001 npm run dev --workspace=my-canvas-rooms-api",
    "dev:my-teaching-api": "PORT=3002 npm run dev --workspace=my-teaching-api",
    "dev:my-studies-api": "PORT=3003 npm run dev --workspace=my-studies-api",
    "dev:kpm-backend": "PORT=3000 npm run dev --workspace=kpm-backend",
    "dev:kpm-frontend": "npm run dev --workspace=kpm-frontend"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KTH/kpm.git"
  },
  "author": "KTH Royal Institute of Technology",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/KTH/kpm/issues"
  },
  "homepage": "https://github.com/KTH/kpm#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "evolene-local-packages": "^0.1.0"
  },
  "workspaces": [
    "packages/*",
    "apis/*",
    "kpm/*"
  ]
}
